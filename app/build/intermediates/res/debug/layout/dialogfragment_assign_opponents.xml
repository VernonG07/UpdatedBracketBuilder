<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mgriffin.dialog_fragments.AssignNewOpponentsDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/et_name1"
        android:hint="Team One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/et_name2"
        android:hint="Team Two"
        android:layout_below="@id/et_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/btn_add_opponents"
        android:text="Add"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name2"/>

</RelativeLayout>
