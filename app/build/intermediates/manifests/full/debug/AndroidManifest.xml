<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vernong.development.simplybrackets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Simple Bracket Builder"
        android:logo="@android:color/transparent"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.griffin.bracketbuilder.v2.Activities.CreateTournamentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.griffin.bracketbuilder.v2.BuildTournamentDialogFragment" />
        <activity android:name="com.example.mgriffin.listviewex.OpponentsMainActivity" />
        <activity
            android:name="com.griffin.bracketbuilder.v2.Activities.TournamentDetailActivity"
            android:label="@string/title_activity_tournament_detail"
            android:theme="@style/AppTheme" />
    </application>

</manifest>