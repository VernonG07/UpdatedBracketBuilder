<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mgriffin.listviewex" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartingBracketActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpponentsFragment"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_detailed_bracket" >
        </activity>
        <activity
            android:name=".OpponentsMainActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_bracket_detail" >
        </activity>
    </application>

</manifest>
