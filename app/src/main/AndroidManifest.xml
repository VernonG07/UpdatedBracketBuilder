<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mgriffin.listviewex">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Simple Bracket Builder"
        android:logo="@android:color/transparent"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.griffin.bracketbuilder.v2.CreateTournamentActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpponentsMainActivity"
            android:label="@string/title_activity_bracket_detail"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeSettings"></activity>
    </application>

</manifest>
