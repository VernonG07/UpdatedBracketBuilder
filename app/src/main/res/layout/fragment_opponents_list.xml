<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mgriffin.listviewex.OpponentsFragment">

    <TextView
        android:id="@+id/tv_bracket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/tv_round_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_bracket_title"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

    <ListView
        android:id="@+id/lv_matchups"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_round_title"/>

    <Button
        android:id="@+id/btn_next_round"
        android:textColor="#FFFFFF"
        android:background="@drawable/next_button_selector"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_add_opponents"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
         />

    <Button
        android:id="@+id/btn_add_opponents"
        android:textColor="#FFFFFF"
        android:background="@drawable/red_add_selector"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
